        <service android:name="com.sxj.bank.rongyi.RecordService"/>

        <activity android:name=".ui.BankActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
