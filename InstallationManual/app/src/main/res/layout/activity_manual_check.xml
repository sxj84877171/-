<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg">
    <TextView
        android:id="@+id/shoudongjiance"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:textColor="#aaaaaa"
        android:gravity="center"
        android:text="手动检测"
        android:layout_marginLeft="25dp"/>

    <RelativeLayout
        android:id="@+id/chelianglabaRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/cheliangdianhuoRl">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/chelianglaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆喇叭"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/chelianglaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请轻按检测车辆喇叭)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cheliangyuanguangRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/chelianglabaRl">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/cheliangyuanguang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆远光"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/cheliangyuanguang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请开启检测车辆远光灯)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cheliangjinguangRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/cheliangyuanguangRl">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/cheliangjinguang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆近光"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/cheliangjinguang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请开启检测车辆近光灯)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cheliangzhishidengRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/cheliangjinguangRl">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/cheliangzhishideng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆指示灯"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/cheliangzhishideng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请按声音的上下键)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cheliangchemenRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/cheliangzhishidengRl">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/cheliangchemen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆车门"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/cheliangchemen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请开启并关闭检测车辆车门)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chelianganquandaiRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/cheliangchemenRl">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/chelianganquandai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆安全带"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/chelianganquandai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请将检测车辆安全带系好)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/yingjianguzhangRl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@+id/chelianganquandaiRl">
        <ImageView
            android:id="@+id/yingjianguzhangImg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/guzhang"/>
        <TextView
            android:id="@+id/yingjianguzhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬件故障"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/yingjianguzhangImg"
            android:textColor="#444444"
            android:layout_marginLeft="9dp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="14dp"
            android:layout_centerVertical="true"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mine_back"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/yingjianguzhangRl"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/chongxinjianceBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/chongxinjianceimg"
            android:layout_centerHorizontal="true" />
        <ImageView

            android:layout_marginLeft="12dp"
            android:id="@+id/nextIv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/nextimg"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cheliangdianhuoRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/shoudongjiance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/cheliangdianhuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆点火"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:layout_below="@+id/cheliangdianhuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请将检测车辆点火启动)"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="25dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shuaxin"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>


</RelativeLayout>