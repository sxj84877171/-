<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <!--2-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="102dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/task_bg"/>


            <TextView
                android:id="@+id/taskDetailDayTv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:textSize="60sp"
                android:textColor="#ffffff"
                android:text="18"
                android:gravity="center"/>
            
        </RelativeLayout>
    </FrameLayout>
    <!--3-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="今日完成"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#222222"/>

    <!--4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="40dp" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskDetailWeekTv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="#ff4365"
                android:text="50"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/taskDetailMonthTv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="#ff4365"
                android:text="122"
                android:textSize="25sp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="本周完成"
                android:textColor="#222222"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="本月完成"
                android:textColor="#222222"
                android:textSize="13sp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--6-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e6e6e6"></View>
    <!--7-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1"/>
    <!--8-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"></View>

    <!--9-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_marginLeft="25dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/day_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="今日退回"
            android:textSize="14sp"
            android:textColor="#222222"
            android:gravity="center"/>

        <TextView
            android:id="@+id/taskDayTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="36dp"
            android:gravity="right|center"
            android:text="2"
            android:textSize="14sp"
            android:textColor="#222222"/>

    </LinearLayout>
    <!--10-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"/>
    <!--11-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_marginLeft="25dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/week_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="本周退回"
            android:textSize="14sp"
            android:textColor="#222222"
            android:gravity="center"/>

        <TextView
            android:id="@+id/taskWeekTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="36dp"
            android:gravity="right|center"
            android:text="11"
            android:textSize="14sp"
            android:textColor="#222222"/>

    </LinearLayout>
    <!--12-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"/>
    <!--13-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_marginLeft="25dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/month_icon"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="本月退回"
            android:textSize="14sp"
            android:textColor="#222222"
            android:gravity="center"/>

        <TextView
            android:id="@+id/taskMonthTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="36dp"
            android:gravity="right|center"
            android:text="23"
            android:textSize="14sp"
            android:textColor="#222222"/>

    </LinearLayout>

    <!--14-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"/>

</LinearLayout>
