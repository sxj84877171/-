<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ecf0f1">

    <RelativeLayout
        android:id="@+id/xinmima"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/jiumima"
        android:layout_height="43dp"
        android:background="#ffffff">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/xinmimaImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="新号码"
            android:textColor="#2b323b"/>
        <View
            android:id="@+id/xinmimaView"
            android:layout_toRightOf="@+id/xinmimaImg"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:background="#aaaaaa"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6"
            android:id="@+id/xinmimaview" />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/xinEt"
            android:textColor="#444444"
            android:layout_toRightOf="@+id/xinmimaView"
            android:background="@null"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:hint="请输入新手机号码"
            android:inputType="textPassword"
            android:textColorHint="#dadada"
            android:layout_height="match_parent"
            android:layout_above="@+id/xinmimaview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/eye2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/see_n"/>
    </RelativeLayout>


    <Button
        android:layout_marginTop="50dp"
        android:layout_below="@+id/xinmima"
        android:id="@+id/okBtn"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:background="@drawable/login_btn_bg"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="确认"/>

    <RelativeLayout
        android:id="@+id/jiumima"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_alignParentTop="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/jiumimaImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="旧号码"
            android:textColor="#2b323b"/>
        <View
            android:id="@+id/jiumimaView"
            android:layout_toRightOf="@+id/jiumimaImg"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:background="#aaaaaa"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />

        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6"
            android:id="@+id/view" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/jiuEt"
            android:textColor="#dadada"
            android:layout_toRightOf="@+id/jiumimaView"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/eye1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/see_n"/>
    </RelativeLayout>

</RelativeLayout>