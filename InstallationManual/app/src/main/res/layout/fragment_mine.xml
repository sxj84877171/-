<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mine_bg"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:src="@drawable/mine_bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/mine_icon"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:src="@drawable/mine_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mine_icon"
        android:layout_marginTop="14dp"/>

    <RelativeLayout
        android:id="@+id/gerenziliao"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:layout_below="@+id/mine_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/nameImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_gerenziliao"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/nameView"
            android:layout_toRightOf="@+id/nameImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="个人资料"
            android:textSize="14sp"
            android:textColor="#444444"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="14dp"
            android:layout_centerVertical="true"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mine_back"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wodeshoucang"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:layout_below="@+id/gerenziliao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/wodeshoucangImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_wodeshoucang"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/wodeshoucangView"
            android:layout_toRightOf="@+id/wodeshoucangImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="我的收藏"
            android:textSize="14sp"
            android:textColor="#444444"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="14dp"
            android:layout_centerVertical="true"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mine_back"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/liulanlishi"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:layout_below="@+id/wodeshoucang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/liulanlishiImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_liulanlishi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/liulanlishiView"
            android:layout_toRightOf="@+id/liulanlishiImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="浏览历史"
            android:textSize="14sp"
            android:textColor="#444444"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="14dp"
            android:layout_centerVertical="true"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mine_back"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/xiugaimima"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:layout_below="@+id/liulanlishi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/xiugaimimaImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_xiugaimima"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/xiugaimimaView"
            android:layout_toRightOf="@+id/xiugaimimaImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改密码"
            android:textSize="14sp"
            android:textColor="#444444"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="14dp"
            android:layout_centerVertical="true"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mine_back"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tuichudenglu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:layout_below="@+id/xiugaimima"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/tuichudengluImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_tuichu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tuichudengluView"
            android:layout_toRightOf="@+id/tuichudengluImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="退出登录"
            android:textSize="14sp"
            android:textColor="#444444"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="14dp"
            android:layout_centerVertical="true"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mine_back"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#e6e6e6" />
    </RelativeLayout>
</RelativeLayout>
