<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_black_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_title_bg"
        android:gravity="center_vertical">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="非法车辆"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />




    </RelativeLayout>

    <ImageView
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="113.5dp"
        android:background="@mipmap/traverrecord_warn"
        android:layout_height="183.5dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:textColor="#dd0000"
        android:text="您可能乘坐的是无牌照非法车辆"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:textColor="#dd0000"
        android:text="请确认此信息，否则自动报警。"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/riderecord_alram"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="86dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/traverrecord_upaddressbtn"/>

    <TextView
        android:id="@+id/riderecord_cancle"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/traverrecord_canclebtn"/>





</LinearLayout>
