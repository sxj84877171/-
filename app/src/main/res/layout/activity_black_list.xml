<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_black_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
    tools:context="com.soarsky.car.ui.trivelrecord.blacklist.BlackListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_title_bg"
        android:gravity="center_vertical">


        <ImageView

            android:layout_width="@dimen/back_view_width"
            android:layout_height="@dimen/back_view_width"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/back_view_margin_left"
            android:src="@mipmap/arrow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="嫌疑车辆"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />




    </RelativeLayout>

    
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="113.5dp"
        android:background="@mipmap/traverrecord_warn"
        android:layout_height="183.5dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:textColor="#dd0000"
        android:text="当前车辆是黑名单车辆，请尽快下车！"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="43dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#dadada"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#222222"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text="车牌号码"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/black_list_carnum"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#888888"
                android:gravity="right"

                android:textSize="15sp"
                android:layout_gravity="end"
                android:text=""
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#222222"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text="号码种类"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/black_list_ptype"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#888888"
                android:gravity="right"

                android:textSize="15sp"
                android:layout_gravity="end"
                android:text=""
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#222222"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text="嫌疑原因"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/black_list_reason"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#888888"
                android:gravity="right"

                android:textSize="15sp"
                android:layout_gravity="end"
                android:text=""
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>
