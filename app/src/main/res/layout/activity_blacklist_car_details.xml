<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--1-->
    <include layout="@layout/car_details_header" />
    <!--2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/violation_text_high"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_chepai"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/check_text"
            android:layout_marginLeft="@dimen/check_text_left"
            android:textSize="@dimen/dialog_text_size"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_view_high"
        android:background="@color/check_bg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <!--3-->
    <include layout="@layout/detail_top_lay"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rl_black_cause"
        android:background="@color/check_bg">
        <TextView
            android:id="@+id/text_yuanyin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gv_item_left"
            android:background="@color/check_bg"
            android:text="@string/blacklist_cause"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/dialog_et_padding"
            android:textColor="@color/check_text"/>
        <View
            android:id="@+id/view"
            android:layout_below="@+id/text_yuanyin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linewidth"
            android:background="@color/grey"/>

        <ListView
            android:background="@color/white"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_below="@+id/view"></ListView>
    </RelativeLayout>
    <TextView
        android:id="@+id/dealTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="处理"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/blacklist_enforcement_color"
        android:gravity="center"/>

</LinearLayout>