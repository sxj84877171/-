<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--1-->
    <include layout="@layout/forget_header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@drawable/modify_edit_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/borrow_car_rl_high">
        <TextView
            android:id="@+id/carCheckNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border"
            android:textSize="@dimen/car_alarm_search_text_size"
            android:text="@string/car_check_num"
            android:layout_marginTop="@dimen/violation_text_pad_right"
            android:layout_marginLeft="@dimen/violation_text_pad_right"/>
        <EditText
            android:id="@+id/et_carNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/carCheckNum"
            android:hint="@string/car_hint_num"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/car_alarm_search_text_size"
            android:layout_marginLeft="@dimen/car_position_text_high"
            android:layout_marginTop="@dimen/violation_text_pad_right"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/yiqi"
            android:layout_height="@dimen/yiqi"
            android:src="@mipmap/delete_word"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/home_icon_lay"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/linewidth"
        android:background="@color/grey"/>
    <!--5-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/borrow_car_rl_high">
        <TextView
            android:id="@+id/car_check_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border"
            android:textSize="@dimen/car_alarm_search_text_size"
            android:text="@string/car_check_pwd"
            android:layout_marginTop="@dimen/violation_text_pad_right"
            android:layout_marginLeft="@dimen/violation_text_pad_right"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_check_pwd"
            android:hint="@string/car_hint_pwd"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/car_alarm_search_text_size"
            android:layout_marginLeft="@dimen/car_position_text_high"
            android:layout_marginTop="@dimen/violation_text_pad_right"
            android:background="@null"
            android:inputType="textPassword"/>
        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="@dimen/yiqi"
            android:layout_height="@dimen/yiqi"
            android:src="@mipmap/see_yes"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/home_icon_lay"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/modify_edit_bg">
        <Button
            android:id="@+id/bt_sure"
            android:layout_width="@dimen/borrow_bt_width"
            android:layout_height="@dimen/dialog_text_high"
            android:background="@color/bt_borrow_bg"
            android:text="@string/back_sure"
            android:textColor="@color/bt_borrow"
            android:textSize="@dimen/car_text_size"
            android:layout_marginTop="@dimen/borrow_margin_top"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
