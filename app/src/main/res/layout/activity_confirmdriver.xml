<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!--1-->
    <include layout="@layout/forget_header3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/car_news_search_rl_height"
        android:background="@color/borrow_rl_bg"
        android:text="@string/local_car"
        android:textSize="@dimen/car_location_text_size"
        android:textColor="@color/dialog_et_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/car_return_margin_top"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/borrow_rl_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/linehigh"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"/>
    <!--2-->
        <ListView
            android:layout_height="@dimen/bottom"
            android:layout_weight="1"
            android:id="@+id/wifi_driver"
            android:layout_width="match_parent"
           android:divider="@null"
            ></ListView>


    <!--3-->

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="@dimen/borrow_bt_width"
            android:layout_height="@dimen/dialog_text_high"
            android:background="@color/bt_borrow_bg"
            android:text="@string/back_sure"
            android:textColor="@color/bt_borrow"
            android:textSize="16sp"
           android:layout_marginBottom="86dp"
           android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</LinearLayout>