<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/forget_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/gv_item_left"
        android:background="@color/borrow_rl_bg" />
    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/start_compensate"
        android:layout_height="@dimen/road_side_text_high">
        
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:background="@mipmap/danger_compensate"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/road_side_text_margin"
            />


        <TextView
            android:id="@+id/text_1"
            android:text="@string/quick_deal"
            android:textSize="@dimen/tv_deal_size"
            android:layout_toRightOf="@+id/img_1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_height="wrap_content" />



        <ImageView
            android:id="@+id/img_error"
            android:layout_width="@dimen/imageview_size"
            android:layout_height="@dimen/imageview_size"
            android:background="@mipmap/danger_right"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/img_margin"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/grey" />





    <RelativeLayout
        android:id="@+id/start_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/road_side_text_high">

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:background="@mipmap/danger_phone"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/road_side_text_margin"
            />


        <TextView
            android:id="@+id/text_2"
            android:text="@string/tell_ploice"
            android:textSize="@dimen/tv_deal_size"
            android:layout_toRightOf="@+id/img_2"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_width="@dimen/imageview_size"
            android:layout_height="@dimen/imageview_size"
            android:background="@mipmap/danger_right"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/img_margin"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/grey" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/start_responsibility"
        android:layout_height="@dimen/road_side_text_high">

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:background="@mipmap/danger_responsibility"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/road_side_text_margin"
            />


        <TextView
            android:id="@+id/text_3"
            android:text="@string/zeren_rending"
            android:textSize="@dimen/tv_deal_size"
            android:layout_toRightOf="@+id/img_3"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/bar_num"
            android:layout_width="@dimen/textview_size"
            android:layout_marginTop="@dimen/query_item_margin"
            android:layout_height="@dimen/textview_size"
            android:layout_marginLeft="@dimen/textview_margin"
            android:layout_toRightOf="@+id/text_3"
            android:background="@drawable/red_dot_bg"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_no_size" />




        <ImageView
            android:layout_width="@dimen/imageview_size"
            android:layout_height="@dimen/imageview_size"
            android:background="@mipmap/danger_right"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/img_margin"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/grey" />


</LinearLayout>