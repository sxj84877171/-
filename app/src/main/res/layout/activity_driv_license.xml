<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1-->
    <include layout="@layout/forget_header"/>

    <!--2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/license_top_high">
        
        <LinearLayout
            android:id="@+id/licenseCardLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/license_icon_lay_high"
            android:layout_marginRight="@dimen/license_icon_lay_margin"
            android:layout_marginLeft="@dimen/license_icon_lay_margin"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/licensenum"
                    android:textSize="@dimen/license_text_size"
                    android:textColor="@color/gray"
                    android:drawablePadding="@dimen/license_drawable_pad"
                    android:gravity="left|center"
                    android:drawableLeft="@mipmap/idcard"
                    />

                <TextView
                    android:id="@+id/drivLicenseTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/license_text_tip_size"
                    android:textColor="@color/gray"
                    android:text="@string/nodata"
                    android:gravity="left|center"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/license_lay_high"
        android:orientation="vertical">
        <!--3.1-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="@dimen/license_proess_high"
                android:layout_height="@dimen/license_proess_high"
                android:layout_centerInParent="true">
                <com.soarsky.car.ui.license.view.CircleProgress
                    android:id="@+id/circleProgress"
                    android:layout_width="match_parent"
                    custom:donut_circle_starting_degree="180"
                    android:layout_height="match_parent"
                    custom:donut_progress="0"
                    custom:donut_inner_bottom_text="@string/licensetotalcent"/>
            </LinearLayout>

        </RelativeLayout>

        <!--3.2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/license_text_bottom_high"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/license_text_width"
                android:layout_height="@dimen/license_text_high"
                android:layout_marginRight="@dimen/license_icon_lay_margin"
                android:layout_marginLeft="@dimen/license_icon_lay_margin"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/license_size"
                    android:textColor="@color/gray"
                    android:text="@string/licensetime"/>
                <TextView
                    android:id="@+id/licenseEndTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/license_size"
                    android:textColor="@color/gray"
                    android:text="@string/nodata"/>

            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>
    
    <!--4-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/license_text_margin"
        android:background="@drawable/modify_edit_bg"/>

    <!--5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/license_bottom_lay"/>
    </LinearLayout>
   <!--6-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/license_bot_high"
        android:background="@drawable/modify_edit_bg"/>

</LinearLayout>
