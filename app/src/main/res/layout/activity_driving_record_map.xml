<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driving_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soarsky.car.ui.drivrecord.map.DrivingRecordMapActivity">
    <include layout="@layout/forget_header" android:id="@+id/header"/>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="46dp" >
        <TextView
            android:id="@+id/date"
            android:text="2016-11-11"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#3c3c3c"
            android:drawableRight="@drawable/arrow"
            android:drawablePadding="8dp"/>
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f8c120"
        android:id="@+id/fengexian"/>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_below="@+id/fengexian"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
</RelativeLayout>
