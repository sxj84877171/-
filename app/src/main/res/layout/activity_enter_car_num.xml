<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_car_num"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/check_bg"
    tools:context="com.soarsky.policeclient.ui.accident.selectCar.EnterCarNumActivity">
    <include layout="@layout/blacklist_header" android:id="@+id/header" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:hint="请输入事故车辆车牌"
            android:background="@null"
            android:textColor="#999999"
            android:paddingLeft="20dp"
            android:layout_height="50dp"
            android:id="@+id/carNum" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/typeLl"
        android:layout_height="40dp">
        <TextView
            android:text="车辆类型:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#3c3c3c" />

        <TextView
            android:hint="请选择车辆类型"
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textColor="#3c3c3c"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/type" />

    </LinearLayout>
    <Button
        android:id="@+id/ok"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/violation_btn_bg"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:text="确定"/>

</LinearLayout>
