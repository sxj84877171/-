<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1-->
    <include layout="@layout/forget_header3"></include>

    <!--2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#f5f5f5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            android:background="@drawable/help_search_bg"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="@dimen/main_edit_icon_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/helpSearchView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mainsearch"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"></View>


            <EditText
                android:id="@+id/helpSearchEt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="搜索"
                android:textSize="12sp"
                android:textColor="#999999"
                android:editable="false"
                android:paddingLeft="@dimen/main_edit_margin_b"/>

        </LinearLayout>
    </RelativeLayout>

    <!--3-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#f0f0f0"
        android:text="热门问题"
        android:textSize="11sp"
        android:paddingLeft="20dp"
        android:gravity="bottom|left"/>

    <!--4-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="334dp"></ListView>

    <!--5-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textColor="@color/new_bg_color"
        android:text="查看全部问题"
        android:textSize="13sp"
        android:gravity="center"/>

    <!--6-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f1f1f1"/>
    
    <!--7-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:background="@color/new_bg_color"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="联系客服"
        android:gravity="center"/>


</LinearLayout>
