<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--上层-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_top_high">

        <ImageView
            android:id="@+id/iv_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/image_icon"/>

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cover_color"/>


        <ImageView
            android:layout_marginTop="@dimen/login_top_logo_high"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_icon"/>
    </FrameLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_top_high"
        >

        <LinearLayout
            android:id="@+id/llLoginTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_top_high"
            android:background="@mipmap/image_icon"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/login_top_logo_high"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_icon"/>


        </LinearLayout>



    </LinearLayout>
    -->

    <!--下层-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#263242"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_bg_high"
            android:background="@drawable/edit_text_bg"
            android:layout_marginLeft="@dimen/login_bg_margin"
            android:layout_marginRight="@dimen/login_bg_margin"
            android:layout_marginTop="@dimen/login_bg_top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userNameEt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/login_edit_pad_left"
                android:drawableLeft="@mipmap/username"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawablePadding="@dimen/login_drawble_pad"
                android:hint="@string/username"
                android:textSize="@dimen/login_text_forget_size"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>

            <EditText
                android:id="@+id/passWordEt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/login_edit_pad_left"
                android:drawableLeft="@mipmap/password"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/password"
                android:drawablePadding="@dimen/login_drawble_pad"
                android:textSize="@dimen/login_text_forget_size"
                android:background="@null"/>


        </LinearLayout>


        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_high"
            android:layout_marginLeft="@dimen/login_bg_margin"
            android:layout_marginRight="@dimen/login_bg_margin"
            android:layout_marginTop="@dimen/login_btn_top"
            android:text="@string/logintitle"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/login_text_size"
            android:background="@drawable/bt_login_bg"/>

    </LinearLayout>


</LinearLayout>
