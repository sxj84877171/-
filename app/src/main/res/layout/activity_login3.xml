<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootView">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@mipmap/silhouette"/>
    </RelativeLayout>


    <!-- <include layout="@layout/edit_lay_out" />-->
    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/login_layout_margin_left"
        android:layout_marginRight="@dimen/login_layout_margin_right"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/iv_margin_left"
            android:layout_height="@dimen/iv_margin_left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/account"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/UserNameEt"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入账号"
            android:textColorHint="@color/black4"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>

        <RelativeLayout
            android:id="@+id/rl_delete_account"
            android:layout_width="@dimen/register_icon_width"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/idNumberView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fragment_family_number_edit_pad"
                android:src="@mipmap/delete_code"/>
        </RelativeLayout>
    </LinearLayout>

     <!--<include layout="@layout/password_edit_lay"/>-->
    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/login_layout_margin_left"
        android:layout_marginRight="@dimen/login_layout_margin_right"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="@dimen/iv_margin_left"
            android:layout_height="@dimen/iv_margin_left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/password"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc"
            android:layout_marginLeft="12dp"
            />
        <EditText
            android:id="@+id/PassWordEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入六位密码"
            android:textColorHint="@color/black4"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>


        <RelativeLayout
            android:id="@+id/loginIconLay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/loginIconView"
                android:layout_width="@dimen/iv_margin_left"
                android:layout_height="@dimen/iv_margin_left"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon"
                />
        </RelativeLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/login_layout_margin_left"
        android:layout_marginRight="@dimen/login_layout_margin_right"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:layout_marginTop="74dp">
     <Button
         android:id="@+id/loginBtn"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/button_bg"
         android:text="@string/logintitle"
         android:textSize="18sp"
         android:gravity="center"
         android:textColor="@color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_height="@dimen/dialog_b_ivleft">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">


            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/register"
                android:textColor="@color/unkown"
                android:textSize="@dimen/query_text_size"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/linewidth"
                android:layout_marginTop="@dimen/login_line_top"
                android:background="@color/unkown" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/forgetLay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true">


            <TextView
                android:id="@+id/forgetTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/forget"
                android:textColor="@color/unkown"
                android:textSize="@dimen/query_text_size"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/linewidth"
                android:layout_marginTop="@dimen/login_line_top"
                android:background="@color/unkown" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
