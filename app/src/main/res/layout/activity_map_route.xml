<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/routeMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.baidu.mapapi.map.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--1top-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/mapRouteBackLay"
                android:layout_width="@dimen/forget_head_icon_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="@dimen/map_route_iv_height"
                    android:layout_height="@dimen/map_route_iv_height"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/map_route_arrow"/>
            </RelativeLayout>


        </RelativeLayout>

        <!--ä¸‹-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_route_ll_height"
            android:orientation="vertical"
            android:background="@mipmap/map_route_bg"
            android:layout_alignParentBottom="true">
            <!--1-->


               <TextView
                   android:id="@+id/mapRouteNameTv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/map_route_textsize"
                   android:gravity="left|center"
                   android:text=""
                   android:textColor="@color/black"
                   android:layout_marginLeft="@dimen/car_return_margin_top"
                   android:layout_marginTop="@dimen/map_route_textview_margin"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dagerbasemessageup_et_padding_bottom">
                   <TextView
                       android:id="@+id/mapRouteDistanceTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/password_text_size"
                       android:text=""
                       android:gravity="left|center"
                       android:textColor="@color/draw_left_color"
                       android:layout_marginLeft="@dimen/car_return_margin_top"/>

                   <TextView
                        android:layout_marginLeft="@dimen/map_route_textview_margin_left"
                       android:id="@+id/mapRouteAddressTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/mapRouteDistanceTv"
                       android:textSize="@dimen/password_text_size"
                       android:text=""
                       android:gravity="left|center"
                       android:textColor="@color/draw_left_color"/>
            </RelativeLayout>

            <!--2-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/car_location_text_margin_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_iv_width"
                    android:layout_marginRight="@dimen/item_iv_width"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:layout_width="@dimen/bottom"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/mapRouteLineTv"
                            android:layout_width="@dimen/dialog_et_high"
                            android:layout_height="@dimen/edit_margin"
                            android:background="@mipmap/route_line"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="@dimen/car_return_margin_top"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="@dimen/bottom"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/mapLocalTv"
                            android:layout_width="@dimen/dialog_et_high"
                            android:layout_height="@dimen/edit_margin"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/local_map"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
        
    </RelativeLayout>

</FrameLayout>
