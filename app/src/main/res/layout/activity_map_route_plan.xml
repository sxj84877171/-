<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/routePlanMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.baidu.mapapi.map.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--1top-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/mapRoutePlanBackLay"
                android:layout_width="@dimen/forget_head_icon_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="@dimen/map_route_iv_height"
                    android:layout_height="@dimen/map_route_iv_height"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/map_route_arrow"/>
            </RelativeLayout>

        </RelativeLayout>

        <!--ä¸‹-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_alignParentBottom="true">
            <!--1-->
            <RelativeLayout
                android:id="@+id/routePlanShowLay"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/bottom"
                android:layout_height="@dimen/map_route_plan_icon_high"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/check_down"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/map_route_margin"
                android:layout_marginLeft="@dimen/map_route_margin"
                android:orientation="vertical">
                <!--0.1-->
                <LinearLayout
                    android:id="@+id/ll_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_switch"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/deal_btn_high"
                        android:layout_height="@dimen/donut_bottom_text_distance"
                        android:src="@mipmap/check_down"/>

                    <TextView
                        android:id="@+id/mapRoutePlanAddrNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/donut_bottom_text_distance"
                        android:text="@string/location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/map_route_textsize"
                        android:gravity="left|center"/>

                </LinearLayout>
                <!--0.2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/map_route_iv_height"
                        android:layout_height="match_parent"
                        android:text="@string/farform"
                        android:textColor="@color/border"
                        android:textSize="@dimen/car_location_text_size"
                        />

                    <TextView
                        android:id="@+id/mapRoutePlanDistanceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/new_bg_color"
                        android:textSize="@dimen/car_location_text_size"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/farform_km"
                        android:textColor="@color/border"
                        android:textSize="@dimen/car_location_text_size"
                       />

                    <TextView
                        android:layout_width="@dimen/car_return_margin_top"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="@dimen/map_route_iv_height"
                        android:layout_height="match_parent"
                        android:text="@string/how_long"
                        android:textColor="@color/border"
                        android:textSize="@dimen/car_location_text_size"
                        android:gravity="left|center" />
                    <TextView
                        android:id="@+id/mapRoutePlanTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/new_bg_color"
                        android:textSize="@dimen/car_location_text_size"
                        android:gravity="left|center"/>
                    <TextView
                        android:layout_width="@dimen/map_route_iv_height"
                        android:layout_height="match_parent"
                        android:text="@string/minute"
                        android:textColor="@color/border"
                        android:textSize="@dimen/car_location_text_size"
                        android:gravity="right|center"/>
                    
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/half"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/yisan"/>

            </LinearLayout>

            <!--3-->
            <LinearLayout
                android:id="@+id/mapPlanLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_route_ll_margin_left"
                android:layout_marginRight="@dimen/map_route_margin"
                android:layout_marginLeft="@dimen/map_route_margin"
                android:orientation="vertical"
                >

                <ListView
                    android:id="@+id/mapRoutePlanListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"></ListView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</FrameLayout>
