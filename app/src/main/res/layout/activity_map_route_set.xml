<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--1-->
    <include layout="@layout/forget_header"/>

    <!--2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_route_set_lay_height">
        <!--2.1-->
        <RelativeLayout
            android:layout_width="@dimen/map_route_set_lay_icon_width"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="@dimen/map_route_set_icon_width"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <!--2.1.1-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/map_route_set_icon_high">
                    <ImageView
                        android:layout_width="@dimen/car_news_search_iv_height"
                        android:layout_height="@dimen/car_news_search_iv_height"
                        android:src="@mipmap/location_s"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <!--2.1.2-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bottom"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="@dimen/divider_height"
                        android:layout_height="match_parent"
                        android:background="@mipmap/location_line"
                        android:layout_centerInParent="true"></LinearLayout>
                </RelativeLayout>

                <!--2.1.3-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/map_route_set_icon_high">
                    <ImageView
                        android:layout_width="@dimen/car_news_search_iv_height"
                        android:layout_height="@dimen/car_news_search_iv_height"
                        android:src="@mipmap/location_e"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

        <!--2.2-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            <!--2.2.1-->
            <LinearLayout
                android:id="@+id/mapRouteSetStartLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom"
                android:layout_weight="1">


                <TextView
                    android:layout_width="@dimen/map_route_set_text_width"
                    android:layout_height="match_parent"
                    android:text="@string/map_route_location_s"
                    android:gravity="left|center"
                    android:textSize="@dimen/password_text_size"
                    android:textColor="@color/black1"/>

                <TextView
                    android:id="@+id/mapRouteSetStartTv"
                    android:layout_width="@dimen/bottom"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="@dimen/password_text_size"
                    android:textColor="@color/black1"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half"
                android:background="@color/grey"></View>

            <!--2.2.3-->
            <LinearLayout
                android:id="@+id/mapRouteSetEndLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom"
                android:layout_weight="1">


                <TextView
                    android:layout_width="@dimen/map_route_set_text_width"
                    android:layout_height="match_parent"
                    android:text="@string/map_route_location_e"
                    android:gravity="left|center"
                    android:textSize="@dimen/password_text_size"
                    android:textColor="@color/black1"/>

                <TextView
                    android:id="@+id/mapRouteSetEndTv"
                    android:layout_width="@dimen/bottom"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="@dimen/password_text_size"
                    android:textColor="@color/black1"/>


            </LinearLayout>
            
        </LinearLayout>

        <!--2.3-->
        <RelativeLayout
            android:id="@+id/mapRouteSetChangeLay"
            android:layout_width="@dimen/map_route_set_lay_icon_width"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="@dimen/car_return_margin_top"
                android:layout_height="@dimen/car_return_margin_top"
                android:layout_centerInParent="true"
                android:src="@mipmap/location_change"/>

        </RelativeLayout>

    </LinearLayout>
    <!--3-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/dagercompensate_tab_height"
        android:layout_marginRight="@dimen/dagercompensate_tab_height"></View>

    <!--4-->
    <Button
        android:id="@+id/mapRouteSetSureBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_route_set_btn_high"
        android:layout_marginLeft="@dimen/map_route_set_margin"
        android:layout_marginRight="@dimen/map_route_set_margin"
        android:layout_marginTop="@dimen/map_route_set_margin"
        android:background="@color/colorAccent"
        android:text="@string/map_route_location_set_sure"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dagerbasemessageup_button_textsize"
        android:visibility="gone"/>

</LinearLayout>
