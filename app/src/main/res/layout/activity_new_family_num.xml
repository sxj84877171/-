<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1-->
    <include layout="@layout/forget_header3"></include>

    <!--2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/family_num_icon"
            android:layout_centerInParent="true"
            android:text="可添加您的亲情号码"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#999999"
            android:drawablePadding="15dp"/>

    </RelativeLayout>

    <!--3-->
    <LinearLayout
        android:id="@+id/phoneLay"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        >
        <!--号码一-->
        <com.soarsky.car.ui.newfamilynum.Util.SlidingMenu
            android:id="@+id/ll_content1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/new_family_edit_bg">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:text="亲情号码一 :"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="14sp"
                            android:background="@null"
                            android:enabled="false"
                            android:editable="false" />
                        <EditText
                            android:id="@+id/phoneOneEt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:textColor="#333333"
                            android:hint="@string/familynumberhint"
                            android:maxLength="11"
                            android:textSize="14sp"
                            android:background="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/deleteOneTv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="删除"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="#cccccc"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/updateOneTv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="编辑"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="#5f95ff"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>


        </com.soarsky.car.ui.newfamilynum.Util.SlidingMenu>

        <!--号码二-->
        <com.soarsky.car.ui.newfamilynum.Util.SlidingMenu
            android:id="@+id/ll_content2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/new_family_edit_bg">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:text="亲情号码二 :"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="14sp"
                            android:background="@null"
                            android:enabled="false"
                            android:editable="false" />
                        <EditText
                            android:id="@+id/phoneTwoEt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:textColor="#333333"
                            android:hint="@string/familynumberhint"
                            android:maxLength="11"
                            android:textSize="14sp"
                            android:background="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/deleteTwoTv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="删除"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="#cccccc"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/updateTwoTv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="编辑"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="#5f95ff"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>


        </com.soarsky.car.ui.newfamilynum.Util.SlidingMenu>

        <!--号码三-->
        <com.soarsky.car.ui.newfamilynum.Util.SlidingMenu
            android:id="@+id/ll_content3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/new_family_edit_bg">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:text="亲情号码三 :"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="15dp"
                            android:textSize="14sp"
                            android:background="@null"
                            android:enabled="false"
                            android:editable="false" />
                        <EditText
                            android:id="@+id/phoneThreeEt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:textColor="#333333"
                            android:hint="@string/familynumberhint"
                            android:maxLength="11"
                            android:textSize="14sp"
                            android:background="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/deleteThreeTv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="删除"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="#cccccc"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/updateThreeTv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="编辑"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:background="#5f95ff"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>


        </com.soarsky.car.ui.newfamilynum.Util.SlidingMenu>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"></View>

    <!--4-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/addFamilyNumBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/add_family_num_btn"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

    </RelativeLayout>


</LinearLayout>
