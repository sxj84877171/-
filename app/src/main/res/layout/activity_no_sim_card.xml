<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_no_sim_card"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.soarsky.car.ui.drivrecord.nosimcard.NoSimCardActivity">
    <include layout="@layout/forget_header3"/>

    <!--没检测到终端的sim卡-->
    <RelativeLayout
        android:id="@+id/simLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/drivrecordlogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/driv_record_margintop"
                android:text="@string/driv_record_sim"
                android:textSize="@dimen/driv_record_text_size"
                android:textColor="@color/gray"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
