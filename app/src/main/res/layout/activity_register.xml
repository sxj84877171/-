<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/regroot">
     <!--头部-->
    <include layout="@layout/activity_header"/>

    <include layout="@layout/count_edit_lay_out"/>

    <include layout="@layout/code_edit_lay_out"/>

    <include layout="@layout/is_code_edit_lay_out"/>

    <include layout="@layout/phone_edit_lay_out"/>

    <include layout="@layout/realname_edit_lay_out"/>

    <include layout="@layout/idnumber_edit_lay_out"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/gouView"
                    android:layout_width="@dimen/register_gou_width"
                    android:layout_height="@dimen/register_gou_width"
                    android:layout_marginLeft="@dimen/register_icon_margin_left"
                    android:layout_marginTop="@dimen/register_icon_margin_top"
                    android:layout_marginRight="@dimen/register_icon_margin_right"
                    android:src="@mipmap/nogou"/>

                <TextView
                    android:id="@+id/reciptTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/register_tip_top"
                    android:gravity="center|right"
                    android:text="@string/registertip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/register_tip_size"/>

                <TextView
                    android:id="@+id/agreeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/register_tip_top"
                    android:text="@string/warntip"
                    android:gravity="center|right"
                    android:textSize="@dimen/register_tip_size"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_edit_high"
        android:layout_marginTop="@dimen/register_btn_top"
        android:layout_marginLeft="@dimen/register_btn_margin"
        android:layout_marginRight="@dimen/register_btn_margin"
        android:background="@color/gray"
        android:text="@string/sure"
        android:textSize="@dimen/register_btn_size"
        android:gravity="center"
        android:textColor="@color/white"/>






</LinearLayout>
