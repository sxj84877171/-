<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1-->
    <include layout="@layout/road_side_order_header"/>
    <!--2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/white"></LinearLayout>

    <!--3 修改后的UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/order_icon_Lay"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <ImageView
                    android:layout_width="38.5dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/order_icon"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="救援请求下单成功！"
                android:textColor="#aaaaaa"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_below="@+id/order_icon_Lay"/>


        </LinearLayout>

    </RelativeLayout>
    <!--3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/road_side_detail_ll_height"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:visibility="gone">
        <!--3.1-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/car_location_iv_height">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/roadsidedetailrequest"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/road_side_detail_text_size"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/roadsidedetailrequesttip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/road_side_detail_ll_margin_top"
            android:textSize="@dimen/query_tip_size"/>
        <TextView
            android:id="@+id/roadSideDetailTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/roadsidedetailtime"
            android:textColor="@color/white"
            android:textSize="@dimen/road_side_detail_big_size"
            android:layout_marginTop="@dimen/car_location_text_margin_left"/>

        <!--3.2-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_margin_top"
        android:background="@color/white">
        <!--4.1.1-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/leftLay"
                    android:layout_width="@dimen/car_alarm_ll_margin"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/roadSideLogoSeverView"
                    android:layout_width="@dimen/road_side_detail_iv_height"
                    android:layout_height="@dimen/road_side_detail_iv_width"
                    android:src="@mipmap/logo_sever"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
        </LinearLayout>
        <!--4.1.2-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/roadSideOrderSeverTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/roadsideordersever"
                android:textSize="@dimen/map_route_textsize"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left|center"/>

        </LinearLayout>

        <!--4.1.3-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/roadSideSeverDistanceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/map_route_textview_margin_left"
                    android:layout_alignParentRight="true"
                    android:text="@string/roadsideorderdistance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/car_location_juli_text_size"
                    android:gravity="left|center"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <!--3-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/grey"/>
    <!--4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/road_side_detail_rl_margin_top"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideorderseverfee"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <TextView
                android:id="@+id/roadSideOrderFeeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/password_text_size"
                android:textColor="@color/black2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"
                android:text=""/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/car_location_text_margin_left"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideordersevertpye"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <TextView
                android:id="@+id/roadSideOrderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/password_text_size"
                android:textColor="@color/black2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/car_location_text_margin_left"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideorderreachtime"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <TextView
                android:id="@+id/roadSideOrderTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/password_text_size"
                android:textColor="@color/black2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/car_location_text_margin_left"
            android:layout_marginLeft="@dimen/car_return_margin_top"
            android:layout_marginBottom="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideordertel"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <RelativeLayout
                android:id="@+id/rl_busessPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top">
                <TextView
                    android:layout_toLeftOf="@+id/iv_phone"
                    android:id="@+id/roadSideOrderTelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/password_text_size"
                    android:textColor="@color/whose_color"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="@dimen/back_view_width"
                    android:layout_height="@dimen/back_view_width"
                    android:layout_marginLeft="@dimen/tv_height"
                    android:src="@mipmap/tel"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <!--4-->


    <!--5-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/modify_edit_bg"/>
    <!--6-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:textSize="13sp"
            android:paddingLeft="20dp"
            android:text="@string/roadsideordercarinfo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <!--6-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="12sp"
                android:text="@string/roadsideordercarnum"/>

            <TextView
                android:id="@+id/roadSideOrderCarNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="12sp"
                android:text="@string/roadsideordercartype"/>
            <TextView
                android:id="@+id/roadSideCarTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="12sp"
                android:text="@string/roadsideorderposition"/>
            <TextView
                android:id="@+id/roadSideOrderPositionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="12sp"
                android:text="@string/roadsideorderphone"/>
            <TextView
                android:id="@+id/roadSideOrderPhoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

    </LinearLayout>
    <!--7-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/modify_edit_bg"/>



</LinearLayout>
