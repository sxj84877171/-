<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1-->
    <include layout="@layout/forget_header3"/>

    <!--2-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/road_side_apply_order_top_high"
        android:background="@drawable/modify_edit_bg"/>
    <!--3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_margin_top"
        android:background="@color/white">
        <!--4.1.1-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/leftLay"
                    android:layout_width="@dimen/car_alarm_ll_margin"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/roadSideLogoSeverView"
                    android:layout_width="@dimen/road_side_detail_iv_height"
                    android:layout_height="@dimen/road_side_detail_iv_width"
                    android:src="@mipmap/logo_sever"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
        </LinearLayout>
        <!--4.1.2-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/roadSideOrderSeverTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/roadsideordersever"
                android:textSize="@dimen/map_route_textsize"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left|center"/>

        </LinearLayout>

        <!--4.1.3-->
        <LinearLayout
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/roadSideSeverDistanceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/map_route_textview_margin_left"
                    android:layout_alignParentRight="true"
                    android:text="@string/roadsideorderdistance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/car_location_juli_text_size"
                    android:gravity="left|center"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <!--3-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/grey"/>
    <!--4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/road_side_detail_rel_margin_top"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideorderseverfee"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <TextView
                android:id="@+id/roadSideOrderFeeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/password_text_size"
                android:textColor="@color/black2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/road_side_detail_rl_margin_top"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideordersevertpye"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <TextView
                android:id="@+id/roadSideOrderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/password_text_size"
                android:textColor="@color/black2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/road_side_detail_rl_margin_top"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideorderreachtime"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <TextView
                android:id="@+id/roadSideOrderTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/password_text_size"
                android:textColor="@color/black2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/road_side_detail_rl_margin_top"
            android:layout_marginLeft="@dimen/car_return_margin_top"
            android:layout_marginBottom="@dimen/road_side_detail_rel_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roadsideordertel"
                android:textSize="@dimen/car_location_text_size"
                android:textColor="@color/border"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top">
                <TextView
                    android:layout_toLeftOf="@+id/iv_phone"
                    android:id="@+id/roadSideOrderTelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/password_text_size"
                    android:textColor="@color/black2"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="@dimen/back_view_width"
                    android:layout_height="@dimen/back_view_width"
                    android:layout_marginLeft="@dimen/tv_height"
                    android:src="@mipmap/tel"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


    <!--4-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/road_side_apply_order_mid_high"
        android:background="@drawable/modify_edit_bg"/>
    <!--5-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/road_side_detail_iv_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:textSize="@dimen/car_location_text_size"
            android:paddingLeft="@dimen/car_return_margin_top"
            android:text="@string/roadsideordercarinfo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/grey"/>
    <!--6-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/back_view_width"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_location_juli_text_size"
                android:text="@string/roadsideordercarnum"/>

            <TextView
                android:id="@+id/roadSideOrderCarNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_color_textsize"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/switch_car_icon"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_location_juli_text_size"
                android:text="@string/roadsideordercartype"/>
            <TextView
                android:id="@+id/roadSideCarTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_color_textsize"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_div_margin_top"
            android:layout_marginLeft="@dimen/car_return_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_location_juli_text_size"
                android:text="@string/roadsideorderposition"/>
            <TextView
                android:id="@+id/roadSideOrderPositionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_color_textsize"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/car_location_text_margin_left"
            android:layout_marginLeft="@dimen/car_return_margin_top"
            android:layout_marginBottom="@dimen/back_view_width">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_location_juli_text_size"
                android:text="@string/roadsideorderphone"/>
            <TextView
                android:id="@+id/roadSideOrderPhoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black4"
                android:textSize="@dimen/car_color_textsize"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/car_return_margin_top"/>
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/grey"></View>

    <!--6-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@color/borrow_rl_bg">

        <Button
            android:id="@+id/roadSideOrderCommitBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/road_side_apply_btn_high"
            android:layout_centerVertical="true"
            android:background="@drawable/road_side_btn_bg"
            android:layout_marginRight="@dimen/road_side_apply_btn_margin"
            android:layout_marginLeft="@dimen/road_side_apply_btn_margin"
            android:textSize="@dimen/dagerbasemessageup_button_textsize"
            android:text="@string/roadsideordercommit"
            android:textColor="@color/white"/>

    </RelativeLayout>


</LinearLayout>
