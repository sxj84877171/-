<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/violation_header_title_high"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/header_title_bg">

    <RelativeLayout
        android:id="@+id/violationBackLay"
        android:layout_width="@dimen/pic_high"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/violationBackView"
            android:layout_width="@dimen/iv"
            android:layout_height="@dimen/iv"
            android:layout_centerInParent="true"
            android:src="@mipmap/back"
            android:layout_marginLeft="@dimen/shier_dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/violationBackView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="@dimen/violation_text_size"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/violation_text_size"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/violation_text_size"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/violation_text_size"
            android:textColor="@color/white"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/iv"
        android:layout_height="@dimen/iv"
        android:src="@mipmap/del_xxhdpi"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/shier_dp"/>

</RelativeLayout>














