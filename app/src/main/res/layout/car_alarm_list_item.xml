<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@drawable/family_edit_bg"
        android:orientation="vertical">

        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/license_num"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/car_alarm_item_time"
                android:gravity="center"
                android:textSize="@dimen/car_alarm_search_text_size"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/car_alarm_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/car_alarm_search_text_size"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/alarm_position"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/car_alarm_item_position"
                android:gravity="center"
                android:textSize="@dimen/car_alarm_search_text_size"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/car_alarm_item_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/car_alarm_search_text_size"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <!--3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/license_num"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/car_alarm_item_license_num"
                android:gravity="center"
                android:textSize="@dimen/car_alarm_search_text_size"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/car_alarm_item_license_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/car_alarm_search_text_size"
                android:textColor="@color/gray"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
