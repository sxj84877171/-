    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_bg"
        android:layout_marginTop="38dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/account"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc"
            android:layout_marginLeft="14dp"
            />
        <EditText
            android:id="@+id/setCountEt"
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/query_text_size"
            android:textColorHint="@color/black4"
            android:hint="请设置账号"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_weight="2"
            android:background="@null"
            android:layout_marginLeft="14dp"/>



        <RelativeLayout
            android:id="@+id/rl_account_delete"
            android:layout_width="@dimen/register_icon_width"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/account_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fragment_family_number_edit_pad"
                android:src="@mipmap/delete_code"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
