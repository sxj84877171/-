<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/selectCarTv"
            android:layout_centerVertical="true"
            android:text="事故原因"
            android:textSize="14sp"
            android:textColor="#3c3c3c"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_violationbottom_confirm"
            android:layout_centerVertical="true"
            android:text="@string/dialog_b_text"
            android:textSize="13sp"
            android:textColor="@color/dialog_b_tv"
            android:layout_marginRight="@dimen/violation_text_pad_right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_et_bg"></View>

    <ListView
        android:id="@+id/dialog_violationbottom_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="@dimen/bottom"
   ></ListView>


</LinearLayout>