<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    >

    <LinearLayout
        android:layout_width="@dimen/erliuo"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/check_text_size"
            android:text="@string/dialog_ti"
            android:textColor="@color/border"
            android:layout_marginTop="@dimen/yiba"
            />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/yiba">


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"

                android:textSize="@dimen/text_size_sixth"
                android:textColor="@color/border"
                android:text="@string/tishi_content"
                />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/query_drawable_pad"
            android:background="@color/dialog_bg"
            android:layout_marginTop="@dimen/fragment_family_number_text_pad"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


             >

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gv_item_high"
                android:text="@string/back_sure"
                android:textColor="@color/bt_borrow_bg"
                android:textSize="@dimen/check_text_size"
                android:background="@null"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
