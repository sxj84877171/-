<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="@dimen/erliuo"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg">

        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/check_text_size"
            android:textColor="@color/border"
            android:layout_marginTop="@dimen/text_margin_left"
            android:src="@mipmap/pay_attention"/>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/objection_mar"
            android:orientation="vertical">


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:textSize="@dimen/fault_size"
                android:textColor="@color/black"
                android:text="@string/xinxi_tijiao"
                />

        </LinearLayout>

        <View
            android:layout_width="@dimen/erliuo"
            android:layout_height="@dimen/query_drawable_pad"
            android:background="@color/dialog_bg"
            android:layout_marginTop="@dimen/fragment_family_number_text_pad"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gv_item_high"
                android:text="@string/back_sure"
                android:textColor="@color/bt_borrow_bg"
                android:textSize="@dimen/check_text_size"
                android:background="@null"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
