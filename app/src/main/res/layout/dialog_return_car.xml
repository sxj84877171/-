<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:clickable="true"
android:orientation="vertical"
android:background="@drawable/dialog_bg"
    >

<LinearLayout
    android:layout_width="@dimen/erliuo"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/check_text_size"
        android:text="@string/dialog_ti"
        android:textColor="@color/border"
        android:layout_marginTop="@dimen/yiba"
        />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/yiba">


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"

            android:textSize="@dimen/license_valid_text_size"
            android:textColor="@color/border"
            android:text="@string/ti_content"
            />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/query_drawable_pad"
        android:background="@color/dialog_bg"
        android:layout_marginTop="@dimen/fragment_family_number_text_pad"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="@dimen/bottom"
            android:layout_height="@dimen/sier"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/back_cancel"
            android:textColor="@color/bt_borrow_bg"
            android:textSize="@dimen/check_text_size"
            />
        <View
            android:layout_width="@dimen/linehigh"
            android:layout_height="@dimen/sier"
            android:background="@color/grey"
            />
        <Button
            android:id="@+id/positiveButton"
            android:textColor="@color/bt_borrow_bg"
            android:layout_width="@dimen/bottom"
            android:layout_height="@dimen/sier"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/back_sure"
            android:textSize="@dimen/check_text_size"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>