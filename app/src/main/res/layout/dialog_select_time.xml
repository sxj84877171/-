<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/time_select"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/car_alarm_rl_margin">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_cancel"
            android:layout_marginLeft="@dimen/car_alarm_rl_margin"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textSize="@dimen/home_text_size" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_sure"
            android:layout_marginRight="@dimen/car_alarm_rl_margin"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/home_text_size" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/time_select"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/car_alarm_rl_margin"
        android:padding="@dimen/radiogroup_margin_bottom">
        <com.soarsky.car.ui.borrowandreturn.borrow.picker.DatePicker
            android:id="@+id/dp_test"
            android:layout_width="@dimen/bottom"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <com.soarsky.car.ui.borrowandreturn.borrow.picker.TimePicker
            android:id="@+id/tp_test"
            android:layout_width="@dimen/bottom"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</LinearLayout>
