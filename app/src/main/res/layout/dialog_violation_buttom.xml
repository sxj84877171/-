<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_b_rhigh">

        <ImageView
            android:id="@+id/dialog_violation_arrowl"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/loading"
            android:layout_height="20dp" />



        <TextView
            android:id="@+id/dialog_violationbottom_confirm"
            android:layout_centerVertical="true"
            android:text="@string/dialog_b_text"
            android:textSize="@dimen/check_text_size"
            android:textColor="@color/dialog_b_tv"
            android:layout_marginRight="@dimen/violation_text_pad_right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gv_item_high"
        android:background="@color/grey"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_high"
        android:background="@color/dialog_et_bg"></View>

    <TextView
        android:id="@+id/selectCarTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gv_item_left"
        android:text="@string/dialog_b_chice"
        android:background="@color/grey"
        android:gravity="center"
        android:textColor="@color/check_text"
        android:textSize="@dimen/dialog_b_ts"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_high"
        android:background="@color/dialog_et_bg"></View>
    <ListView
        android:id="@+id/dialog_violationbottom_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="@dimen/bottom"
   ></ListView>


</LinearLayout>