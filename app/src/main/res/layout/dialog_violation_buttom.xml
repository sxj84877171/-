<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_b_rhigh">

        <ImageView
            android:id="@+id/dialog_violation_arrowl"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/violation_margin_icon_top"
            android:layout_width="@dimen/dialog_b_iv"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_l"
            android:layout_height="@dimen/dialog_b_iv" />
        <ImageView
            android:id="@+id/dialog_violation_arrowr"
            android:layout_toRightOf="@+id/dialog_violation_arrowl"
            android:layout_width="@dimen/dialog_b_iv"
            android:src="@mipmap/arrow_r"
            android:layout_marginLeft="@dimen/dialog_b_ivleft"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dialog_b_iv" />


        <TextView
            android:id="@+id/dialog_violationbottom_confirm"
            android:layout_centerVertical="true"
            android:text="@string/dialog_b_text"
            android:textSize="@dimen/check_text_size"
            android:textColor="@color/dialog_b_tv"
            android:layout_marginRight="@dimen/violation_text_pad_right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gv_item_high"
        android:background="@color/grey"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_high"
        android:background="@color/dialog_et_bg"></View>

    <TextView
        android:id="@+id/selectCarTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gv_item_left"
        android:text="@string/dialog_b_chice"
        android:background="@color/grey"
        android:gravity="center"
        android:textColor="@color/check_text"
        android:textSize="@dimen/dialog_b_ts"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_view_high"
        android:background="@color/dialog_et_bg"></View>


</LinearLayout>