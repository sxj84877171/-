<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/forget_header3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车辆车牌号码"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        android:textSize="11sp"
        android:textColor="#999999"/></LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湘"
                android:textColor="#333333"
                android:textSize="14sp"

                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:src="@mipmap/blue_pull"/>
            <View
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="13dp"
                android:background="#999999"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical"
            android:text="12345"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆识别码"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:textSize="11sp"
            android:textColor="#999999"/></LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入车辆识别码后四位"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_useCar"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:textSize="11sp"
            android:textColor="#999999"/></LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入安装终端预留手机号码"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_useCar"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/button_confirm"
        android:layout_marginTop="115dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
