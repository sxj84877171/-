<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_family_number_edit_high"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/family_edit_bg">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:text="@string/familynumberupdatethree"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/fragment_family_number_edit_pad"
            android:textSize="@dimen/fragment_family_number_edit_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/phoneUpdateThreeEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:inputType="number"
            android:textColor="@color/gray"
            android:hint="@string/familynumberhint"
            android:textSize="@dimen/fragment_family_number_edit_size"
            android:background="@null"
            />

        <RelativeLayout
            android:layout_width="@dimen/fragment_family_number_update_lay_width"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/phoneUpdateThreeBtn"
                android:layout_width="@dimen/fragment_family_number_update_btn_width"
                android:layout_height="@dimen/fragment_family_number_update_btn_high"
                android:text="@string/familynumberupdate"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:background="@drawable/family_update_btn_bg"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
