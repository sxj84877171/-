<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sier"
    android:layout_marginTop="@dimen/erba"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="@dimen/ll_line_width"
        android:layout_height="@dimen/sier"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_bg"
        android:layout_marginTop="@dimen/login_icon_width">
        <ImageView
            android:layout_width="@dimen/register_icon_margin_top"
            android:layout_height="@dimen/register_icon_margin_top"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/home_div_margin_top"
            android:background="@mipmap/account"
            />

        <View
            android:layout_width="@dimen/query_drawable_pad"
            android:layout_height="@dimen/home_map_top"
            android:layout_gravity="center_vertical"
            android:background="#cccccc"
            android:layout_marginLeft="@dimen/fragment_personal_text_size"
            />
        <EditText
            android:id="@+id/forgetNameEt"
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/query_text_size"
            android:textColorHint="@color/black4"
            android:layout_marginLeft="@dimen/fragment_personal_text_size"
            android:maxLength="15"
            android:layout_weight="2"
            android:digits="AaSsDdFfGgHhJjKkLlQqWwEeRrTtYyUuIiOoPpZzXxCcVvBbNnMm_0123456789"
            android:background="@null"
            android:hint="请设置账号"/>




        <RelativeLayout
            android:id="@+id/rl_account_delete"
            android:layout_width="@dimen/register_icon_width"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/account_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fragment_family_number_edit_pad"
                android:src="@mipmap/delete_code"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
