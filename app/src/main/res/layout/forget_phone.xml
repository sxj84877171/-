<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/forget_edit_high"
    android:layout_marginTop="@dimen/forget_text_margin_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/forget_layout_margin_left"
        android:layout_marginRight="@dimen/forget_layout_margin_left"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg">
        <EditText
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:text="@string/forgetphone"
            android:paddingLeft="@dimen/forget_edit_pad"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/forget_text_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/mobliephoneEt"
            android:layout_width="@dimen/bottom"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/forget_hint_size"
            android:maxLength="11"
            android:inputType="number"
            android:layout_weight="2"
            android:background="@null"
            />



        <RelativeLayout
            android:layout_width="77dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/forgetSendPhoneBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:text="获取验证码"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
