<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/search_rl_height"
      android:background="@color/serach_bg">
      <LinearLayout
          android:id="@+id/ll_search"
          android:layout_width="@dimen/search_ll_width"
          android:layout_height="@dimen/search_ll_height"
          android:background="@drawable/local_car_search_bg"
          android:layout_centerInParent="true"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/img_search"
              android:layout_width="@dimen/local_imageview_width"
              android:layout_height="@dimen/text_margin_left"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="@dimen/search_imageview_height"
              android:src="@mipmap/search"
              />
          <View
              android:layout_width="@dimen/search_view_hidth"
              android:layout_height="@dimen/search_view_height"
              android:background="@color/grey"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="@dimen/search_view_margin_left"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="输入关键字进行搜索"
              android:layout_gravity="center_vertical"
              android:textSize="@dimen/search_text_size"
              android:textColor="@color/grey"
              android:layout_marginLeft="9dp"/>
      </LinearLayout>
  </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_car_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>
        <ImageView
            android:id="@+id/latest_read"
            android:layout_width="@dimen/latest_read_width"
            android:layout_height="@dimen/latest_read_width"
            android:src="@mipmap/latest_read"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/latest_read_width_margin_bottom"
            android:layout_marginRight="@dimen/latest_read_width_margin_right"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>
