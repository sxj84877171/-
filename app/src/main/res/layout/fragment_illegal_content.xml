<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/linehigh"
        android:background="@color/grey"/>

    <!--1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/query_margin_top_high"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/query_tip_size"
                    android:gravity="center"
                    android:text="@string/violationtime"
                    android:textColor="@color/black4"/>
                <TextView
                    android:id="@+id/illegalDealTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/query_tip_size"
                    android:text="2016-11-15 11:51:45"
                    android:textColor="@color/black4"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/linehigh"
        android:background="@color/grey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/query_text_high"
        android:background="@color/borrow_rl_bg"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/query_bg_high">
        <include layout="@layout/illegal_address_list_item"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/linehigh"
        android:background="@color/grey"/>
    <!--2-->
    <ExpandableListView
        android:id="@+id/illegalExpListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="#f1f1f1"
        android:dividerHeight="5dp"
        android:layout_weight="1"
        android:visibility="gone"></ExpandableListView  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f1f1f1">
    <ListView
        android:id="@+id/illegalListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#f1f1f1"
        android:dividerHeight="0.5dp"
        android:background="@color/white"
        ></ListView  >
        <View
            android:layout_below="@+id/illegalListView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linehigh"
            android:background="@color/grey"/>
    </RelativeLayout>


</LinearLayout>
