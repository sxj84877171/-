<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/homeTop"
        android:layout_width="match_parent"
        android:layout_height="190dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tuceng" />
        <ImageView
            android:layout_width="96dp"
            android:layout_height="25.5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/carnum_bg"
            android:layout_marginTop="150dp"/>
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="153dp"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/weitingquanliRl"
        android:layout_width="86.5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeTop"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/weizhangtingcheTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weizhangtingcheImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="违章劝离"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weizhangtingcheTv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="及时定位寻爱车"
            android:textColor="#999999"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/weizhangtingcheImg"
            android:layout_width="86.5dp"
            android:layout_height="76.5dp"
            android:src="@drawable/weizhangtingche"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aicheweizhiRl"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/homeTop"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/aicheweizhiImg"
            android:layout_width="72dp"
            android:layout_height="48.5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/aicheweizhi" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/aicheweizhiImg">

            <TextView
                android:id="@+id/aicheweizhiTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="爱车位置"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aicheweizhiTv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="及时定位寻爱车"
                android:textColor="#999999"
                android:textSize="11sp" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/weizhangguanliRl"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/aicheweizhiRl"
        android:layout_marginRight="25dp"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/weizhangguanliImg"
            android:layout_width="72dp"
            android:layout_height="48.5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/weizhangguanli" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/weizhangguanliImg">

            <TextView
                android:id="@+id/weizhangguanliTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="违章管理"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weizhangguanliTv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="及时定位寻爱车"
                android:textColor="#999999"
                android:textSize="11sp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/fen1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/weitingquanliRl"
        android:layout_marginTop="8dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/woshijiaoshiyuanRl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fen1">

        <ImageView
            android:id="@+id/fangxiangpanImg"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/fangxiangpan" />

        <TextView
            android:id="@+id/driverCarnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/fangxiangpanImg"
            android:text="我是驾驶员"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/xiangyou"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/xiangyouimg" />
    </RelativeLayout>

    <View
        android:id="@+id/fen2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/woshijiaoshiyuanRl"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fen2">

        <RelativeLayout
            android:id="@+id/dajiadouzaiyongRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="大家都在用"
                android:textColor="#333333"
                android:textSize="13sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/tv2"
                android:background="#333333" />

            <View
                android:layout_width="8dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv2"
                android:background="#333333" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dajiadouzaiyongRl"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:listSelector="@android:color/white"
            android:verticalSpacing="10dp"
            android:numColumns="3" />
    </RelativeLayout>
</RelativeLayout>
