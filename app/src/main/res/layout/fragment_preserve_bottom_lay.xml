<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <!--2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--2.1-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragmentPreSenseLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_preserve_icon_lay_high"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/fragment_preserve_icon_high"
                    android:layout_height="@dimen/fragment_preserve_icon_high"
                    android:layout_gravity="center"
                    android:background="@mipmap/sense"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fragment_preserve_icon_top"
                    android:text="@string/preservesense"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/gray"/>


            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="@dimen/linewidth"
            android:layout_height="match_parent"
            android:background="@color/grey"/>


        <!--2.2-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragmentDriveLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_preserve_icon_lay_high"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/fragment_preserve_icon_high"
                    android:layout_height="@dimen/fragment_preserve_icon_high"
                    android:layout_gravity="center"
                    android:background="@mipmap/drivrecord"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fragment_preserve_icon_top"
                    android:text="@string/preservedrive"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/gray"/>


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
