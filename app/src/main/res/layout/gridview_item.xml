<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gv_item_high"
    >

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/check_pai"
            android:layout_marginLeft="@dimen/gv_item_left"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_item"
            android:layout_toRightOf="@id/iv_item"
            android:layout_marginLeft="@dimen/item_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/check_text"
            android:layout_centerVertical="true"
            android:text="@string/item_chepaihao"/>
        <View
            android:layout_marginTop="@dimen/gv_item_high"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linewidth"
            android:background="@color/grey"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/linewidth"
            android:layout_height="@dimen/gv_item_high"
            android:background="@color/grey"/>
</RelativeLayout>
