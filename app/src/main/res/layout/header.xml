<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modify_edit_bg"
    >
    <!-- 内容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_high">
        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/dialog_et_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head_contentLayout" >

            <!-- 箭头头像、进度条 -->
            <FrameLayout
                android:id="@+id/fl_iv"
                android:layout_marginLeft="@dimen/violation_text_pad_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <!-- 箭头 -->
                <ImageView
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="@dimen/dialog_text_size"
                    android:layout_gravity="center"
                    android:id="@+id/head_arrowImageView"
                    android:src="@mipmap/refreshed"/>
                <ImageView
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="@dimen/dialog_text_size"
                    android:layout_gravity="center"
                    android:id="@+id/head_refreshing"
                    android:src="@mipmap/refreshing"
                    android:visibility="gone"/>

            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/border"
                android:id="@+id/head_tipsTextView"
                android:textSize="@dimen/listview_text"
                android:text="@string/loading"
                android:layout_toRightOf="@+id/fl_iv"
                android:layout_marginLeft="@dimen/ml"/>




        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="附近车辆..."
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/violation_text_pad_right"
            android:layout_marginStart="@dimen/item_iv_height"
            android:layout_marginBottom="7dp"/>
    </RelativeLayout>

</RelativeLayout>
