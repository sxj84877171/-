<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/check_bg"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/home_lay_iv_high"
        android:layout_height="@dimen/home_lay_iv_high"
        android:src="@mipmap/confirm_dirver_yes"
        android:layout_marginLeft="@dimen/home_lay_iv_high"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_toRightOf="@+id/image"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audit"
        android:textSize="@dimen/home_lay_tv_size"
        android:textColor="@color/home_text_color"
        android:layout_marginLeft="@dimen/detail_item_top"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_toRightOf="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_lay_t_size"
        android:textColor="@color/home_text_color"
        android:text="@string/opened"
        android:layout_marginLeft="@dimen/home_lay_wu"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:clickable="true"
        android:id="@+id/iv_switch"
        android:layout_width="@dimen/home_lay_sy"
        android:layout_height="30dp"
        android:src="@mipmap/home_open"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/home_lay_iv_high"/>
    <!--<Switch
        android:layout_width="@dimen/home_lay_sy"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/home_lay_iv_high"
        android:layout_centerVertical="true"
        android:id="@+id/kaiguan" />-->
</RelativeLayout>
