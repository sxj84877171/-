<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="72.5dp"
        android:layout_marginTop="13dp"
        >
    <ImageView
        android:id="@+id/image"
    android:layout_width="97dp"
    android:layout_height="72.5dp"
    android:layout_marginLeft="14dp"
    android:src="@mipmap/trafficrule_icon"/>
    <TextView
        android:id="@+id/news_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="下雨天，汽车保养如何做"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="14.5dp"
        android:textColor="#333333"
        android:textSize="15sp"/>

        <TextView
            android:id="@+id/news_remark"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="阴雨天气，如果缺乏及时有效的换机保养，爱车也可能患病"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="14.5dp"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_below="@+id/news_title"
            android:layout_marginTop="5.5dp"/>
    <ImageView
        android:id="@+id/iv_eyes"
        android:layout_width="12.5dp"
        android:layout_height="8dp"
        android:src="@drawable/eyes"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="18dp"/>
        <TextView
            android:id="@+id/read_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eyes"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_eyes"
            android:layout_marginLeft="5.5dp"
            android:text="1874"
            android:textColor="#999999"
            android:textSize="10sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
       android:layout_below="@+id/relativeLayout"
        android:background="#e6e6e6"/>
</RelativeLayout>
