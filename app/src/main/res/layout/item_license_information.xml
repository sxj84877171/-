<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/license_item_margin_left"
        android:layout_marginBottom="@dimen/licenseinformation_item_margin"
        android:layout_marginTop="@dimen/licenseinformation_item_margin">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/license_item_text_size"
                android:textColor="@color/black"
                android:text="@string/car_id"/>
            <TextView
                android:id="@+id/tv_car_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/licenseinformation_color_size"
                android:textColor="@color/black"
                android:text=""
                android:layout_marginLeft="@dimen/license_text_margin_left"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_below="@+id/ll_1"
            android:layout_marginTop="@dimen/license_text_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_content_size"/>
            <TextView
                android:id="@+id/tv_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_content_size"
                android:layout_marginLeft="@dimen/license_text_margin_left"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_content_size"
                android:layout_marginLeft="@dimen/license_text_margin_left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_3"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_2"
            android:layout_marginTop="@dimen/license_text_margin_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/license_to_date"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_content_size"/>
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_content_size"
                android:layout_marginLeft="@dimen/license_text_margin_left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/license_day"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_content_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/imageview_size">
            <ImageView
                android:id="@+id/iv_whose"
                android:layout_width="@dimen/img_size"
                android:layout_height="@dimen/img_size"
                android:src="@mipmap/personal"/>
            <TextView
                android:id="@+id/tv_whose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/four"
                android:text="@string/who_use"
                android:textSize="@dimen/road_side_detail_tip_size"
                android:textColor="@color/whose_color"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/imageview_size"
            android:layout_height="@dimen/imageview_size"
            android:src="@mipmap/arrow_r"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/img_margin"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
