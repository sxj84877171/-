<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_responsibility_redcricle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/red_circle"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_responsibility_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2016-10-20 10:00"
                android:textSize="12sp"
                android:textColor="#888888"/>

            <TextView
                android:id="@+id/item_responsibility_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="麓谷企业广场"
                android:textSize="14sp"
                android:textColor="#3c3c3c"/>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_responsibility_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/noduty"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</LinearLayout>