        </LinearLayout>

    </LinearLayout>

    <!--8-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/license_text_h"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/car_icon_width"
