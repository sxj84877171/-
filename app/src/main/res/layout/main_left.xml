<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_bg">
    <!--1.1-->
    <RelativeLayout
        android:layout_width="@dimen/fragment_personal_iconlay_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/left_imageview_margin_top"
        >

        <RelativeLayout
            android:id="@+id/rl_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_width"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/round_width"
                android:layout_height="@dimen/round_width"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/big_circle"
                />

            <ImageView
                android:layout_width="@dimen/fragment_personal_iconround_width"
                android:layout_height="@dimen/fragment_personal_iconround_width"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/circle"
                />

            <com.soarsky.car.ui.home.view.CircularImage
                android:id="@+id/cover_user_photo"
                android:layout_width="@dimen/fragment_personal_icon_width"
                android:layout_height="@dimen/fragment_personal_icon_width"
                android:layout_centerInParent="true"
                android:src="@mipmap/touxiang"/>




        </RelativeLayout>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/imageview_margin_bottom"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/login_line_top"/>
    <!--1.2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/driver_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/iv_driver_card"
            android:layout_width="@dimen/layout_height_width"
            android:layout_height="@dimen/layout_height_width"
            android:src="@mipmap/driver_card"
            android:layout_marginLeft="@dimen/img_margin"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_driver_card"
            android:layout_marginLeft="@dimen/date_text_margin_left"
            android:layout_marginTop="@dimen/fragment_car_icon_high">
        <TextView
            android:id="@+id/tv_driver_card"

            style="@style/drawer_left_text"
            android:text="@string/driver_card"
            />
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_below="@+id/tv_driver_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/zeren_text_content_size"
            android:layout_marginLeft="@dimen/left_text_margin_left"
            android:textColor="@color/border"
            android:text=""
            android:layout_marginTop="@dimen/license_text_margin"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_marginLeft="@dimen/left_text_margin_left"
            android:layout_below="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/zeren_text_content_size"
            android:text="@string/to_date"
            android:textColor="@color/draw_left_color"
            android:layout_marginTop="@dimen/license_text_margin"/>
        <TextView
            android:id="@+id/date"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_below="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/zeren_text_content_size"
            android:text=""
            android:textColor="@color/draw_left_color"
            android:layout_marginLeft="@dimen/date_text_margin_left"
            android:layout_marginTop="@dimen/license_text_margin"/>
        </RelativeLayout>

        <ImageView
            android:src="@mipmap/arrow_r"
            style="@style/drawer_left_next"
            />
    </RelativeLayout>
    <View
        android:layout_width="@dimen/left_view_width"
        android:layout_height="@dimen/half"
        android:background="@color/grey"
        android:layout_gravity="center_horizontal"/>
    <!--1.3-->

    <RelativeLayout
        android:id="@+id/id_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/iv_id_card"
            android:layout_width="@dimen/layout_height_width"
            android:layout_height="@dimen/layout_height_width"
            android:src="@mipmap/id_card"
            android:layout_marginLeft="@dimen/img_margin"
            android:layout_centerVertical="true"/>


