        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_id_card"
            android:layout_marginLeft="@dimen/date_text_margin_left"
            android:layout_marginTop="@dimen/fragment_car_icon_high">
            <TextView
                android:id="@+id/tv_id_card"

                style="@style/drawer_left_text"
                android:text="@string/id_card"
                />
            <TextView
                android:id="@+id/tv_id_card_num"
                android:layout_below="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/zeren_text_content_size"
                android:layout_marginLeft="@dimen/left_text_margin_left"
                android:textColor="@color/border"
                android:text=""
                android:layout_marginTop="@dimen/license_text_margin"/>
            <TextView
                android:id="@+id/tv_year_date"
                android:layout_marginLeft="@dimen/left_text_margin_left"
                android:layout_below="@+id/tv_id_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/zeren_text_content_size"
                android:text="@string/to_cent_date"
                android:textColor="@color/draw_left_color"
                android:layout_marginTop="@dimen/license_text_margin"/>
            <TextView
                android:id="@+id/year_date"
                android:layout_toRightOf="@+id/tv_year_date"
                android:layout_below="@+id/tv_id_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/zeren_text_content_size"
                android:text=""
                android:textColor="@color/draw_left_color"
                android:layout_marginLeft="@dimen/date_text_margin_left"
                android:layout_marginTop="@dimen/license_text_margin"/>
        </RelativeLayout>

        <ImageView
            android:src="@mipmap/arrow_r"
            style="@style/drawer_left_next" />
    </RelativeLayout>
    <View
        android:layout_width="@dimen/left_view_width"
        android:layout_height="@dimen/half"
        android:background="@color/grey"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_lllegal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/left_item_high"
            >
            <ImageView
                android:id="@+id/iv_lllegal"
                android:layout_width="@dimen/layout_height_width"
                android:layout_height="@dimen/layout_height_width"
                android:src="@mipmap/llleagl"
                android:layout_marginLeft="@dimen/img_margin"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_lllegal"
                android:layout_toRightOf="@+id/iv_lllegal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/query_item_text_title_size"
                android:textColor="@color/border"
                android:layout_centerVertical="true"
                android:text="@string/lllegal"
                android:layout_marginLeft="@dimen/left_text_margin_left"/>
            <TextView
                android:id="@+id/num_bar"
                android:layout_width="@dimen/left_num_bar"
                android:layout_height="@dimen/left_num_bar"
                android:textSize="@dimen/left_num_bar_size"
                android:textColor="@color/left_num_bar_color"
                android:background="@drawable/red_dot_bg"
                android:text=""
                android:visibility="gone"
                android:layout_toRightOf="@+id/tv_lllegal"
                android:layout_above="@+id/tv_lllegal"/>
            <ImageView
                android:src="@mipmap/arrow_r"
                style="@style/drawer_left_next"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/left_view_width"
            android:layout_height="@dimen/half"
            android:background="@color/grey"
            android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:id="@+id/rl_switch_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_item_high"
        >
        <ImageView
            android:id="@+id/iv_switch_car"
            android:layout_width="@dimen/layout_height_width"
            android:layout_height="@dimen/layout_height_width"
            android:src="@mipmap/switch_car"
            android:layout_marginLeft="@dimen/img_margin"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/iv_switch_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/query_item_text_title_size"
            android:textColor="@color/border"
            android:layout_centerVertical="true"
            android:text="@string/drawer_left_switch"
            android:layout_marginLeft="@dimen/left_text_margin_left"/>
        <ImageView
            android:src="@mipmap/arrow_r"
            style="@style/drawer_left_next"
            />
    </RelativeLayout>
    <View
        android:layout_width="@dimen/left_view_width"
        android:layout_height="@dimen/half"
        android:background="@color/grey"
        android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:id="@+id/rl_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/left_item_high"
            >
            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="@dimen/layout_height_width"
                android:layout_height="@dimen/layout_height_width"
                android:src="@mipmap/exit_login"
                android:layout_marginLeft="@dimen/img_margin"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/iv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/query_item_text_title_size"
                android:textColor="@color/border"
                android:layout_centerVertical="true"
                android:text="@string/exit_login"
                android:layout_marginLeft="@dimen/left_text_margin_left"/>
            <ImageView
                android:src="@mipmap/arrow_r"
                style="@style/drawer_left_next"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/left_view_width"
            android:layout_height="@dimen/half"
            android:background="@color/grey"
            android:layout_gravity="center_horizontal"
            />

</LinearLayout>