<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/header_title_bg">


    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/mainMapSearchLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/map_search_edit_bg"
            >

            <RelativeLayout
                android:layout_width="@dimen/main_edit_icon_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/mainSearchView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mainsearch"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"></LinearLayout>


            <EditText
                android:id="@+id/mainMapSearchEt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/main_search_tip"
                android:textSize="13sp"
                android:textColor="#999999"
                android:paddingLeft="@dimen/main_edit_margin_b"
                android:textColorHint="#999999"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/ten"
                android:layout_alignParentRight="true"
                android:src="@mipmap/serach_delete"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/car_position_text_top"
               android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/mapSearchCancelLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mapSearchCancelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancle"
                android:textColor="@color/white"
                android:textSize="12sp"
               android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

