<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/car_switch_selector_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_search_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="9dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/search_location"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/rl_search_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
            <TextView
                android:id="@+id/mapSearchCitytv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="麓谷"
                android:textColor="@color/border"
                android:gravity="left|center"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/mapSearchAddresstv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapSearchCitytv"
                android:textColor="@color/draw_left_color"
                android:text="麓谷大道涉外学院"
                android:gravity="left|center"
                android:textSize="13sp"
                android:layout_marginTop="3dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"></View>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
