<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/modify_edit_high"
    android:layout_marginTop="@dimen/modify_text_margin_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/modify_layout_margin_left"
        android:layout_marginRight="@dimen/modify_layout_margin_left"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:text="@string/modifynowpwd"
            android:paddingLeft="@dimen/modify_edit_pad"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/modify_text_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/modifyNowpwdEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textSize="@dimen/modify_hint_size"
            android:maxLength="6"
            android:layout_weight="2"
            android:background="@null"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border"/>

        <RelativeLayout
            android:id="@+id/modifyNowpwdLay"
            android:layout_width="@dimen/modify_icon_width"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/modifyNowpwdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
