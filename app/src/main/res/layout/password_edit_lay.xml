<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/include_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_et_pwd_high"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_et_pwd_iv_left"
            android:layout_marginTop="@dimen/login_et_pwd_iv_top"
            android:layout_marginRight="@dimen/login_et_pwd_iv_right"
            android:src= "@mipmap/password"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray"
            android:text="@string/password"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/PassWordEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
             />
    </LinearLayout>

</LinearLayout>
