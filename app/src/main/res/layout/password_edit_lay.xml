<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:layout_marginTop="@dimen/include_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/login_layout_margin_left"
        android:layout_marginRight="@dimen/login_layout_margin_right"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:text="@string/password"
            android:gravity="left|center"
            android:paddingLeft="@dimen/login_pad_width"
            android:textSize="@dimen/login_edit_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/PassWordEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_weight="4"
            android:background="@null"
             />
        <View
            android:layout_width="@dimen/linewidth"
            android:layout_height="match_parent"
            android:background="@color/border"/>

        <RelativeLayout
            android:id="@+id/loginIconLay"
            android:layout_width="@dimen/login_icon_width"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/loginIconView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
