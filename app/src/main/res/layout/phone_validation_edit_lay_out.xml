<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/register_edit_high"
    android:layout_marginTop="@dimen/register_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/register_layout_margin_left"
        android:layout_marginRight="@dimen/register_layout_margin_right"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:text="@string/blind_term_phone"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/register_edit_pad"
            android:textSize="@dimen/register_text_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/blind_term_phoneEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="left|center_vertical"
            android:layout_weight="2"
            android:hint="@string/blind_term_phone_tip"
            android:textSize="@dimen/register_hint_size"
            android:background="@null"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border"/>

        <RelativeLayout
            android:id="@+id/sendPhoneLay"
            android:layout_width="@dimen/blind_validation_phone_width"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sendPhoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/blind_term_send_code"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:textSize="@dimen/register_hint_size"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
