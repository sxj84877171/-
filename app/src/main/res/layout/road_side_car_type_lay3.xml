<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/road_side_cartype_Lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/family_edit_bg">

        <TextView
            android:id="@+id/road_side_rescue_cartypeTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/black5"
            android:hint="@string/roadsidecartypetip"
            android:textSize="14sp"
            android:textColorHint="#999999"/>
        <ImageView
            android:layout_width="@dimen/dialog_text_size"
            android:layout_height="@dimen/dialog_text_size"
            android:src="@mipmap/road_arrow_r"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>
