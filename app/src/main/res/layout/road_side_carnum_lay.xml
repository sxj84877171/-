<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/family_edit_bg">
        <EditText
            android:layout_width="@dimen/license_valid_text_width"
            android:layout_height="match_parent"
            android:textColor="@color/border"
            android:text="@string/blind_term_carnum"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/road_side_list_order_margin"
            android:textSize="14sp"
            android:background="@null"
            android:enabled="false"
            android:editable="false"
            />
        <com.soarsky.car.ui.blindterm.ClearEditText
            android:id="@+id/road_side_rescue_carnumEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/border"
            android:hint="@string/blind_term_carnum_tip"
            android:textSize="14sp"
            android:background="@null"
            android:textColorHint="@color/grey"/>

    </LinearLayout>

</LinearLayout>
