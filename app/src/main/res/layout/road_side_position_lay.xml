<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/family_edit_bg">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/border"
            android:text="@string/roadsideposition"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/road_side_list_order_margin"
            android:textSize="14sp"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/road_side_rescue_positionEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/border"
            android:hint="@string/roadsidepositiontip"
            android:textSize="@dimen/license_valid_text_size"
            android:background="@null"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>
