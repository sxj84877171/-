<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/road_side_sever_Lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/family_edit_bg">
        <TextView
            android:layout_width="@dimen/license_valid_text_width"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:text="@string/roadsidesever"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/license_valid_text_pad"
            android:textSize="@dimen/license_valid_text_size"
            android:background="@null"
            />
        <TextView
            android:id="@+id/road_side_rescue_severTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/gray"
            android:hint="@string/roadsidesevertip"
            android:textSize="@dimen/license_valid_text_size"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_r"/>

    </LinearLayout>

</LinearLayout>
