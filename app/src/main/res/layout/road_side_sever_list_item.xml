<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <!--1-->
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/roadSideSeverItemView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_sever"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/roadSideSeverListItemNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/roadsiderescuesever"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/roadsiderescuefee"
                            android:textColor="#888888"
                            android:textSize="11sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ï¿¥"
                            android:textColor="#888888"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/roadSideSeverListItemFeeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180"
                            android:textColor="#888888"
                            android:textSize="11sp"/>

                    </LinearLayout>


                </LinearLayout>
                
            </RelativeLayout>

        </LinearLayout>
        <!--3-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/roadSideSeverListItemStateTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|right"
                android:text="@string/roadsiderescuestate"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:paddingRight="20dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
