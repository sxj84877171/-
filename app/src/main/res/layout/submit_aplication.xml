<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--1-->
    <include layout="@layout/borrowand_return_header"/>
    <!--2-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom"
        android:layout_weight="1"
        android:background="@mipmap/submit_smile_face"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_width"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="@dimen/violation_margin_icon_top"
                android:layout_height="@dimen/violation_margin_icon_top"
                android:layout_marginLeft="@dimen/violation_text_pad_right"
                android:src="@mipmap/submit_car"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/borrow_message"
                android:textColor="@color/bt_borrow_bg"
                android:textSize="@dimen/license_valid_text_size"
                android:layout_marginLeft="@dimen/seven"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_car"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cause_bg"
            android:layout_marginLeft="@dimen/dialog_text_size"
            android:layout_marginRight="@dimen/dialog_text_size"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/violation_text_pad_right">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_car_num"
                android:textSize="@dimen/listview_text"
                android:layout_marginLeft="@dimen/fragment_personal_update_top"
                android:textColor="@color/color_text"/>
                <TextView
                    android:id="@+id/carNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView1"
                    android:text=""
                    android:layout_marginLeft="@dimen/car_position_text_high"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/listview_text"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yisan">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_phone_num"
                    android:textSize="@dimen/listview_text"
                    android:layout_marginLeft="@dimen/fragment_personal_update_top"
                    android:textColor="@color/color_text"/>
                <TextView
                    android:id="@+id/phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView2"
                    android:text=""
                    android:layout_marginLeft="@dimen/car_position_text_high"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/listview_text"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yisan">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:textSize="@dimen/listview_text"
                    android:layout_marginLeft="@dimen/fragment_personal_update_top"
                    android:textColor="@color/color_text"
                    />
                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView3"
                    android:text=""
                    android:layout_marginLeft="@dimen/car_position_text_high"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/listview_text"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yisan"
                android:layout_marginBottom="@dimen/violation_text_pad_right">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"
                    android:textSize="@dimen/listview_text"
                    android:layout_marginLeft="@dimen/fragment_personal_update_top"
                    android:textColor="@color/color_text"/>
                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView4"
                    android:text=""
                    android:layout_marginLeft="@dimen/car_position_text_high"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/listview_text"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
