<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/header_title_bg">

    <LinearLayout
        android:id="@+id/illegalBackLay"
        android:layout_width="@dimen/forget_head_icon_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/back_view_width"
                android:layout_height="@dimen/back_view_width"
                android:src="@mipmap/arrow"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/topicTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/illegalChangeCarTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/switch_car_margin_text_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/switch_car_margin"/>

</RelativeLayout>
