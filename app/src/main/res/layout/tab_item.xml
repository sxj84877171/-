<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/gv_item_high"
    >

    <ImageView
        android:layout_width="@dimen/violation_text_pad_right"
        android:layout_height="@dimen/violation_text_pad_right"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/tabtextview"
        android:text="@string/frist_pager" />

</RelativeLayout>