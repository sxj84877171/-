<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/license_valid_text_high"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/family_edit_bg">
        <EditText
            android:layout_width="@dimen/license_valid_text_width"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:text="@string/licensevalidphone"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/license_valid_text_pad"
            android:textSize="@dimen/license_valid_text_size"
            android:background="@null"
            android:enabled="false"
            android:editable="false" />
        <EditText
            android:id="@+id/licenseValidPhoneEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="@color/gray"
            android:hint="@string/licensevalidtipphone"
            android:textSize="@dimen/license_valid_text_size"
            android:background="@null"
            />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">
            
            <Button
                android:id="@+id/licenseValidPhoneBtn"
                android:layout_width="@dimen/license_valid_btn_w"
                android:layout_height="@dimen/license_valid_btn_h"
                android:background="@color/colorAccent"
                android:text="@string/licensevalidcode"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
