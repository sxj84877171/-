<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_bg">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/check_code"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc"
            android:layout_marginLeft="14dp"
            />
        <EditText
            android:id="@+id/verCodeEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="left|center_vertical"
            android:layout_weight="2"
            android:hint="请输入验证码"
            android:maxLength="12"
            android:textSize="@dimen/query_text_size"
            android:textColorHint="@color/black4"
            android:layout_marginLeft="14dp"
            android:background="@null"
            />


        <RelativeLayout
            android:layout_width="107dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/check_code_delete"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/delete_code"
                android:layout_centerVertical="true"/>

            <View
                android:id="@+id/view"
                android:layout_toRightOf="@+id/check_code_delete"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="#cccccc"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/sendPhoneBtn"
                android:layout_toRightOf="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_bg_color"
                android:textSize="12sp"
                android:text="获取验证码"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
